{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GUNICORN",
            "type": "debugpy",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/tests/data/secret.env",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/gunicorn",
            "args": [
                "--bind",
                "0.0.0.0:8001",
                "--workers",
                "1",
                "--timeout",
                "6000",
                "-k",
                "uvicorn.workers.UvicornWorker",
                "nldi.asgi:APP",
                "--worker-connections",
                "100",
                "--access-logfile",
                "-"
            ]
        },
        {
            "name": "UVICORN",
            "type": "debugpy",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/tests/data/secret.env",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/uvicorn",
            "args": [
                "--host",
                "0.0.0.0",
                "--port",
                "8080",
                "--interface",
                "wsgi",
                "nldi.wsgi:APP"
            ]
        }
    ]
}
